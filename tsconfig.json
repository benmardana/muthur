{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 14",

  "compilerOptions": {
    "lib": ["es2020"],
    "module": "commonjs",
    "target": "es2020",

    "baseUrl": "./src",
    "outDir": "./dist",
    "paths": {
      "commands/*": ["commands/*"],
      "store/*": ["store/*"],
      "utils/*": ["utils/*"],
      "middleware/*": ["middleware/*"]
    },

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
